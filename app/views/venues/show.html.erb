<div class="container">
  <h1> <%= @venue.name %> </h1>
    <%= image_tag "galaxy.jpg", class: "pic" %>
  <h3> <%= "Address: #{@venue.address}" %> </h3>
  <h3> <%= "Capacity: #{@venue.capacity}" %> </h3>

  <h3><%= "Logistic partner on-site: #{@venue.logistic_partner}" %></h3>
  <h3><%= "Available ressources on-site:  #{@venue.available_ressources}" %></h3>
  <h3><%= "Access: #{@venue.access}" %></h3>

  <p><%= @venue.description %></p>
</div>

<% unless current_user == @venue.user %>
  <%= render "booking_form" %>
<% end %>
