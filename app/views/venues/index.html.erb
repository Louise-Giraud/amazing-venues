<div class="d-flex justify-content-between align-items-center m-3">
  <h1>Check out our amazing venues ğŸ›¸</h1>
  <%= link_to "Add a venue", new_venue_path, class: "btn btn-primary" %>
</div>
<div class="grid">
  <% @venues.each do |venue| %>
  <div class="venue_card">
    <%= image_tag "galaxy.jpg" %>
    <h2><%= link_to venue.name, venue_path(venue) %></h2>
    <p><strong><%= venue.address %></strong></p>
    <p><i class="fa-solid fa-people-group" style="color: #ffffff;"></i>  Capacity: <%= venue.capacity %></p>
  </div>
  <% end %>
</div>
