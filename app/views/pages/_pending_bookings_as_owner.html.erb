<h3>Pending bookings</h3>
<div class="container my-2 p-0">
  <% @pending_bookings_as_owner.each do |booking| %>
    <div class="booking_card mb-3">
      <div class="d-flex justify-content-between align-items-center p-1">
        <h3><strong><%= link_to booking.venue.name, venue_path(booking.venue.id) %></strong></h3>
        <p>Date: <%= booking.date %></p>
        <p>Booked by: <%= booking.user.username %><p>
        <%= cl_image_tag booking.user.photo.key, class: "avatar" %>
        <%= simple_form_for [booking] do |f| %>
          <%= f.submit "CONFIRM", class: "btn btn-success" %>
          <%= f.submit "DECLINE", class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
